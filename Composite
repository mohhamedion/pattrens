  
<?php
// Your code here!
interface VideoInterface {
    public function play();
}


class Video implements VideoInterface{
    public $name;
    public $author;
    
    public function __construct($name,$author){
        $this->name=$name;
        $this->minutes = $author;
    }
    
    public function play(){
        return 'playing '.$this->name."\n";
    }
    
}


class VideoProxy  implements VideoInterface {
    public $videoList;
    
    public function __construct(PlayList $videoList){
        $this->videoList = $videoList;
    }
    
    public function play(){
        return '1080 HD '.$this->videoList->playList[$this->videoList->currentVideo]->play();
    }
}


class PlayList {

    public $playList = [];
    public $currentVideo = 0;
    
    public function addVideo(  $video){
        $this->playList[] = $video;
    }
    
    public function next(){
        if(isset($this->playList[$this->currentVideo+1])){
           $this->currentVideo++;
        }else{
           $this->currentVideo=0;
        }
    }
    
    
    public function prevent(){
        if(isset($this->playList[$this->currentVideo-1])){
           $this->currentVideo--;
         }
    }
    
    public function play(){
        return   $this->playList[$this->currentVideo]->play();
     }
    
}




$playList = new PlayList();
$proxyList = new VideoProxy($playList);
$playList->addVideo(new Video('gameOfTrhounse','asdmasd'));
$playList->addVideo(new Video('gameOfTrhounse2','asdmasd'));
$playList->addVideo(new Video('gameOfTrhounse3','asdmasd'));
$playList->addVideo(new Video('gameOfTrhounse4','asdmasd'));

echo $playList->play();
$playList->next();
echo $proxyList->play();
